<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bluegreen"
    tools:context=".CreateProductActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="390dp"
        android:layout_height="726dp"
        android:layout_marginTop="200dp"
        android:background="@color/lightest_pumpkin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="582dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightest_pumpkin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TitleCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:background="@color/pumpkin"
                    android:text="Create Product"
                    android:textColor="@color/dark_bluegreen"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/InputNameCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/dark_bluegreen"
                    android:textColorHint="@color/lighter_bluegreen"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/InputWeightCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:ems="10"
                    android:hint="Weight"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/dark_bluegreen"
                    android:textColorHint="@color/lighter_bluegreen"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/InputPriceCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/dark_bluegreen"
                    android:textColorHint="@color/lighter_bluegreen"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/InputDiscountCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:ems="10"
                    android:hint="Discount"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/dark_bluegreen"
                    android:textColorHint="@color/lighter_bluegreen"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TitleConditionCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:text="Condition"
                        android:textColor="@color/dark_bluegreen"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp">

                        <CheckBox
                            android:id="@+id/NewRadiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="New"
                            android:textColor="@color/lighter_bluegreen"
                            android:textColorHint="@color/lighter_bluegreen" />

                        <CheckBox
                            android:id="@+id/UsedRadiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Used"
                            android:textColor="@color/lighter_bluegreen"
                            android:textColorHint="@color/lighter_bluegreen" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TitleCategoryCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:text="Category"
                        android:textColor="@color/dark_bluegreen"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/SpinnerCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:entries="@array/productCategory"
                        android:textAlignment="viewEnd"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TitleShipmentCreate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:text="Shipment Plan"
                        android:textColor="@color/dark_bluegreen"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/SpinnerShipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:entries="@array/shipmentPlans"
                        android:textAlignment="viewEnd"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ButtonCreate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:text="CREATE" />

            <Button
                android:id="@+id/ButtonCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:text="CANCEL" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>