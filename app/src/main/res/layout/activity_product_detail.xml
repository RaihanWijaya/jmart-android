<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity"
    android:background="#c3baff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@color/lightest_pumpkin"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginVertical="12dp"
            android:background="@color/dark_bluegreen"
            app:srcCompat="@drawable/ic_baseline_info_24" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textAlignment="center"
            android:textColor="@color/dark_bluegreen"
            android:textColorHint="@color/dark_bluegreen"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/lighter_pumpkin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:text="Weight"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/weightProduct"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:textAlignment="viewEnd"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/lighter_pumpkin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:text="Price"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/priceProduct"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:textAlignment="viewEnd"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/lighter_pumpkin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:text="Discount"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/discountProduct"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:textAlignment="viewEnd"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/lighter_pumpkin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:text="Condition"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/conditionProduct"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:textAlignment="viewEnd"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/lighter_pumpkin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:text="Category"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/categoryProduct"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:textAlignment="viewEnd"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/lighter_pumpkin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:text="Shipment Plans"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/shipmentPlanProduct"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/lighter_pumpkin"
                android:textAlignment="viewEnd"
                android:textColor="@color/dark_bluegreen"
                android:textColorHint="@color/dark_bluegreen"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>